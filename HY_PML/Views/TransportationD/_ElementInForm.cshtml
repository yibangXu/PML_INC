								} else {
									$.messager.alert('警告', '第' + (i + 1) + '筆資料仍於編輯狀態中！', 'warning');
									return false;
								}
							}

						}
						list.push({
							"NextStatNo": $('#NextStatNo').val(),
							"NextStatName": $('#NextStatName').val(),
							"TransportNo": $('TransportNo').val(),
							"LadingNo": $('#LadingNo').val(),
