<script>
	var url = '/BL_Report_Mas/';
	var gridTitle = '提單資料';
	var funcName = "GetLadingGridJSON";
	var sortName = 'LadingDate';
	var list = [];
	var model = [
		{
			name: "RowNumber", label: "編號", key: true, search: false
		},
		{
			name: "WarehouseRNo", label: "倉單號碼", search: true, hidden: true,
		},
		{
