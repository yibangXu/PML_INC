		},
		{
			name: "DtlHeight", label: "高", search: false,
		},
		{
			name: "DtlGrossWeight", label: "材積重", search: false,
		},
		{
			name: "DtlType", label: "類別", search: false,
		},
		{
			name: "CcNo", label: "付款方式", search: false,
		},
		{
			name: "ToPayment", label: "到付款", search: false,
