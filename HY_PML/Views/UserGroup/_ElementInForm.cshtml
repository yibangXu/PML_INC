<table>
    <tr>
        <td>
            <label class="required">群組代號:</label>
        </td>
        <td>
            <div class="fitem">
                <input name="UserGroupNo" id="UserGroupNo" class="easyui-textbox" style="width:auto" required data-options="validType:'maxLength[10]'">
                <label id="UserGroupNoDisplay"></label>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <label class="required">群組名稱:</label>
        </td>
        <td>
            <div class="fitem">
                <input name="UserGroupName" class="easyui-textbox" style="width:auto" required data-options="validType:'maxLength[20]'">
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <label>是否啟用:</label>
        </td>
        <td>
            <div class="fitem">
                <input name="IsActive" id="IsServer" class="easyui-switchbutton" style="width:auto" data-options="onText:'是',offText:'否',value:'true'" checked>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <label>備註:</label>
        </td>
        <td>
            <div class="fitem">
                <input name="Remark" class="easyui-textbox" style="width:auto" data-options="multiline:true,validType:'maxLength[20]'">
            </div>
        </td>
    </tr>
</table>
