@model HY_PML.Models.BillLadingReport
@{
	Layout = null;
	@Styles.Render("~/Content/report/e-report.css");
}
<style>
	page[size="E-Report6"] {
		margin: 0;
		padding: 0 0 0 8mm;
		width: 215mm;
		height: 126mm;
		background-size: cover;
		/*background-image: url('../../Content/images/E-Report6.jpg');*/
		background-repeat: no-repeat;
		font-family: PMingLiU;
		font-weight: bold;
		font-size: 12px !important;
		word-break: break-all;
		zoom: 1;
	}
