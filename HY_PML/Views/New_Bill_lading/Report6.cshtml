	<page size="E-Report6">
		<div style="position:absolute;padding-top:37mm;width:94mm;">
			<span style="padding-left:48mm;display:inline-block;width:38mm">
				@Model.SendCustNo
			</span>
		</div>
		<div style="position:absolute;padding-top:45mm;width:94mm;">
			<span style="padding-left:9mm;display:inline-block;width:80mm">
				@Model.SendBy
				<br />
				@Model.SendCustAddr
			</span>
		</div>
		<div style="position:absolute;padding-top:76mm;width:94mm;">
			<span style="padding-left:28mm;display:inline-block;width:24mm">
				@Model.SendInvNo
			</span>
			<span style="padding-left:13mm;display:inline-block;width:23mm">
				@Model.SendPhone
			</span>
		</div>
		<div style="position:absolute;padding-top:40.5mm;padding-left:105mm;width:94mm;">
			<span style="padding-left:4mm;display:inline-block;width:80mm">
				@Model.RecBy
				<br />
				@Model.RecChAddr
			</span>
		</div>
		<div style="position:absolute;padding-top:70mm;padding-left:105mm;width:94mm;">
			<span style= "padding-left: 27mm;display:inline-block;width:54mm">
				@Model.RecCountry
			</span>
		</div>
		<div style="position:absolute;padding-top:76mm;padding-left:105mm;width:94mm;">
			<span style="padding-left:22mm;display:inline-block;width:21mm">
				@Model.RecPostDist
			</span>
			<span style="padding-left:11mm;display:inline-block;width:27mm">
				@Model.RecPhone
			</span>
		</div>
	</page>
</body>

