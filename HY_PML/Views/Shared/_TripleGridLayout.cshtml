		function ResizeGrid() {
			var w = $(window);
			g.jqGrid("setGridWidth", w.innerWidth() - 23);
			g.jqGrid("setGridHeight", w.innerHeight() / 2 - 25 - $(".navbar").height() - $("#gbox_grid").height() + $("#gbox_grid .ui-jqgrid-bdiv").height());
